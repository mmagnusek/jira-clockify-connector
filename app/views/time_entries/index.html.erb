<p id="notice"><%= notice %></p>

<h1>Time Entries</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Clockify ID</th>
      <th>Clockify Description</th>
      <th>Jira ID</th>
      <th>Jira Task ID</th>
      <th>Jira Task Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_entries.each do |time_entry| %>
      <tr>
        <td><%= l time_entry.start_time, format: :short %></td>
        <td><%= time_entry.clockify_id %></td>
        <td><%= time_entry.clockify_description %></td>
        <td><%= time_entry.jira_id %></td>
        <td><%= time_entry.jira_task_id %></td>
        <td><%= time_entry.jira_task_description %></td>
        <td><%= link_to 'Show', [@user, time_entry] %></td>
        <td><%= link_to 'Edit', [:edit, @user, time_entry] %></td>
        <td><%= link_to 'Destroy', [@user, time_entry], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Time Entry', [:new, @user, :time_entry] %>
